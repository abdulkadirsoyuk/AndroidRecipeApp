<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/yemek_resmi"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/cooking" />

            <TextView
                android:id="@+id/yemek_adi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yemek_resmi"
                android:layout_marginTop="26dp"
                android:background="#DDDD3500"
                android:gravity="center"
                android:text="Yemek Adı"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yemek_malzemeler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yemek_adi"
                android:layout_marginTop="40dp"
                android:gravity="left"
                android:text="Malzemeler"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/yemek_yapilisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yemek_malzemeler"
                android:layout_marginTop="37dp"
                android:gravity="left"
                android:text="Yapılışı"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/yemek_puf_nokta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yemek_yapilisi"
                android:layout_marginTop="27dp"
                android:gravity="left"
                android:text="Püf Noktaları"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/video_izleme"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_below="@id/yemek_puf_nokta"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Video Linki"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
